<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Grupo para Crear Contactos -->
        <record id="group_create_contact" model="res.groups">
            <field name="name">Creador de Contactos</field>
            <field name="category_id" ref="base.module_category_contacts"/> <!-- Corregido -->
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <!-- Quitar permiso de creaciÃ³n del grupo base.group_user -->
        <record id="base.access_res_partner" model="ir.model.access">
            <field name="perm_create">0</field>
        </record>

        <!-- Nuevo permiso para el grupo Creador de Contactos -->
        <record id="access_res_partner_creator" model="ir.model.access">
            <field name="name">res.partner.creator</field>
            <field name="model_id" ref="model_res_partner"/>
            <field name="group_id" ref="contact_restriction.group_create_contact"/>
            <field name="perm_read">1</field>
            <field name="perm_write">1</field>
            <field name="perm_create">1</field>
            <field name="perm_unlink">0</field>
        </record>
    </data>
</odoo>